{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@semantic-knowledge/*": ["./src/semantic-knowledge/*"],
      "@source-ingestion/*": ["./src/source-ingestion/*"],
      "@semantic-processing/*": ["./src/semantic-processing/*"],
      "@knowledge-retrieval/*": ["./src/knowledge-retrieval/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
