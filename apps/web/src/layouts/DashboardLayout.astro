---
import ClientRouter from "astro/components/ClientRouter.astro";
interface Props {
  title?: string;
}

const { title = "klay+" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="light dark" />
    <title>{title} â€” klay+</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://cdn.boxicons.com/3.0.3/fonts/basic/boxicons.min.css"
      rel="stylesheet"
    />

    <ClientRouter />
    <script is:inline>
      (function () {
        try {
          var stored = localStorage.getItem("klay-theme");
          var prefersDark = window.matchMedia(
            "(prefers-color-scheme: dark)"
          ).matches;
          var isDark = stored === "dark" || (stored !== "light" && prefersDark);
          if (isDark) {
            document.documentElement.classList.add("dark");
            document.documentElement.style.colorScheme = "dark";
          } else {
            document.documentElement.style.colorScheme = "light";
          }
        } catch (e) {}
      })();
    </script>
  </head>
  <body class="bg-slate-50 dark:bg-slate-950">
    <div class="fixed inset-0 pointer-events-none opacity-20">
      <div
        class="absolute inset-0 bg-[linear-gradient(rgba(59,130,246,0.1)_1px,transparent_1px),linear-gradient(90deg,rgba(59,130,246,0.1)_1px,transparent_1px)] bg-[length:32px_32px] dark:bg-[linear-gradient(rgba(59,130,246,0.1)_1px,transparent_1px),linear-gradient(90deg,rgba(59,130,246,0.1)_1px,transparent_1px)] bg-[length:32px_32px]"
      >
      </div>
    </div>
    <div class="fixed inset-0 pointer-events-none overflow-hidden">
      <div
        class="orb-1 absolute top-20 left-20 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl"
      >
      </div>
      <div
        class="orb-2 absolute bottom-20 right-20 w-96 h-96 bg-gray-500/20 rounded-full blur-3xl"
      >
      </div>
      <div
        class="orb-3 absolute top-1/2 left-1/2 w-96 h-96 bg-violet-500/10 rounded-full blur-3xl"
      >
      </div>
    </div>
    <slot />
  </body>
</html>
